{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "packages/**/*", "packages/**/*.vue"],
  "exclude": ["packages/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"],
      "@utils/*": ["./packages/utils/*"],
      "@constants/*": ["./packages/constants/*"],
      "@components/*": ["./packages/components/*"],
    }
  }
}
